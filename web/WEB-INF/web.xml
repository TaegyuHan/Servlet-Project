<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- ===================================== Filter Start =====================================  -->

    <!-- /v1/employees -->
    <filter>
        <filter-name>EmployeeFilter</filter-name>
        <filter-class>webapp.filter.dto.EmployeeFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EmployeeFilter</filter-name>
        <url-pattern>/v1/employees</url-pattern>
    </filter-mapping>

    <!-- /v1/department -->
    <filter>
        <filter-name>DepartmentFilter</filter-name>
        <filter-class>webapp.filter.dto.DepartmentFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DepartmentFilter</filter-name>
        <url-pattern>/v1/department</url-pattern>
    </filter-mapping>

    <!-- /v1/dept-emp -->
    <filter>
        <filter-name>DepEmpFilter</filter-name>
        <filter-class>webapp.filter.dto.DepEmpFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DepEmpFilter</filter-name>
        <url-pattern>/v1/dept-emp</url-pattern>
    </filter-mapping>

    <!-- /v1/dept-manager -->
    <filter>
        <filter-name>DeptManagerFilter</filter-name>
        <filter-class>webapp.filter.dto.DeptManagerFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DeptManagerFilter</filter-name>
        <url-pattern>/v1/dept-manager</url-pattern>
    </filter-mapping>

    <!-- /v1/salary -->
    <filter>
        <filter-name>SalaryFilter</filter-name>
        <filter-class>webapp.filter.dto.SalaryFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SalaryFilter</filter-name>
        <url-pattern>/v1/salary</url-pattern>
    </filter-mapping>

    <!-- /v1/title -->
    <filter>
        <filter-name>TitleFilter</filter-name>
        <filter-class>webapp.filter.dto.TitleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>TitleFilter</filter-name>
        <url-pattern>/v1/title</url-pattern>
    </filter-mapping>

    <!-- ===================================== Filter End =====================================  -->

</web-app>